{
  "name": "vanilla-js-test",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "build:css": "npx @tailwindcss/cli -i ./templates/styles/tailwind.css -o ./public/styles/output.css",
    "build:js": "webpack --config webpack.config.js",
    "build": "npm run build:css && npm run build:js",
    "dev": "concurrently \"nodemon server.js\" \"npm run build:js -- --watch\" \"npm run build:css -- --watch\"",
    "format": "prettier --write \"**/*.{js,twig}\""
  },
  "dependencies": {
    "express": "^5.1.0",
    "twig": "^1.17.1",
    "@hotwired/stimulus": "^3.2.2",
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^10.0.0",
    "raw-loader": "^4.0.2",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "tailwindcss": "^4.1.11",
    "@tailwindcss/cli": "^4.1.11",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "@zackad/prettier-plugin-twig": "^0.16.0",
    "storybook": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/blocks": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/web-components": "^8.6.14",
    "@storybook/web-components-webpack5": "^8.6.14"
  }
}
